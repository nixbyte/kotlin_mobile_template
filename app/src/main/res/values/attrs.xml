<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_collapsedTarget" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AutofitRecyclerView">
        <attr name="columnWidth" format="dimension" />
        <attr name="columnCount" format="integer" />
        <attr name="columnSpace" format="dimension"/>
        <attr name="pagginated" format="boolean"/>
        <attr name="scrolling_behavior" format="string"/>
        <attr name="page_limit" format="integer" />
    </declare-styleable>
</resources>